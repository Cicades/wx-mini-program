/* pages/detail/detail.wxss */
.user-info{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user-info .avatar{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.user-info .date{
  font-size: 28rpx;
  color: #ccc;
  font-weight: light;
}
.detail-image{
  width: 100%;
}
.operations{
  margin: 20rpx 0;
  overflow: hidden;
}
.operations image{
  width: 70rpx;
  height: 70rpx;
  float: right;
  margin-left: 10rpx;
}
.content{
  margin-bottom: 20rpx;
  display: block;
}
.title{
  margin: 20rpx 0;
}
.content{
  font-size: 28rpx;
  color: #333;
}
.content-wrap{
  padding: 20rpx;
}