/* pages/movie_detail/movie_detail.wxss */
page{
  height: 100%;
}
.movie-detail-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  height: 100%;
  justify-content: space-around;
}
.movie-detail-container .poster{
  height: 500rpx;
}
.movie-detail-container .title{
  text-align: center;
}
.movie-detail-container .info{
  display: flex;
  flex-direction: column;
  width: 400rpx;
  color: #333;
  padding: 0 100rpx;
  font-size: 32rpx;
  font-weight: light;
}
.movie-detail-container .go-movie{
  width: 80%;
}